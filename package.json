{
  "name": "@pghalliday/ts-type-guard-builder",
  "version": "0.0.0",
  "description": "A tool for generating TypeScript interfaces and types with associated type guards",
  "author": "Peter Halliday <pghalliday@gmail.com> (https://pghalliday.com)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pghalliday/ts-type-guard-builder.git"
  },
  "bugs": {
    "url": "https://github.com/pghalliday/ts-type-guard-builder/issues"
  },
  "homepage": "https://github.com/pghalliday/ts-type-guard-builder#readme",
  "main": "lib/index.js",
  "scripts": {
    "cmd:lint": "eslint . --ext .ts",
    "cmd:test": "nyc mocha",
    "cmd:coverage": "nyc report -r text && nyc check-coverage",
    "cmd:build": "rimraf lib && tsc",
    "alarmist:lint": "chokidar \"+(src|test)/**/*\" -c \"alarmist-npm cmd:lint\"",
    "alarmist:test": "chokidar \"+(src|test)/**/*\" -c \"alarmist-npm cmd:test\"",
    "alarmist:coverage": "chokidar \"coverage/lcov.info\" -c \"alarmist-npm cmd:coverage\"",
    "alarmist:build": "chokidar \"src/**/*\" -c \"alarmist-npm cmd:build\"",
    "start": "alarmist-monitor run-p alarmist:lint alarmist:test alarmist:coverage alarmist:build",
    "test": "run-s cmd:lint cmd:test cmd:coverage",
    "build": "run-s test cmd:build"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "alarmist": "^1.0.27",
    "alarmist-npm": "^1.0.6",
    "chai": "^4.2.0",
    "chokidar": "^3.5.1",
    "chokidar-cli": "^2.1.0",
    "eslint": "^7.19.0",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
